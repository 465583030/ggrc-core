<div class="hideable-holder">
    <form action="javascript://">
        {{> /static/mustache/base_objects/form_restore.mustache}}

        <div class="row-fluid">
            <div class="span8">
                <div class="row-fluid">
                    <label>
                        Title
                        <span class="required">*</span>
                        <i class="fa fa-question-circle" rel="tooltip" title="Title goes here"></i>
                    </label>
                    <input data-id="title_txtbx" class="input-block-level required" placeholder="Enter Title"
                           name="title"
                           type="text" value="{{instance.title}}" tabindex="1" autofocus>
                    <br>
                </div>
                <div class="row-fluid">
                    <div data-id="description_hidden" class="hidable">
                        <label>
                            Description
                            <i class="fa fa-question-circle" rel="tooltip" title="Description goes here"></i>
                            <a data-id="hide_description_lk" href="javascript://" class="field-hide"
                               tabindex="-1">hide</a>
                        </label>
                        <div class="wysiwyg-area">
                    <textarea id="program_description" class="span12 double wysihtml5" name="description"
                              placeholder="Enter Description" tabindex="3">{{{instance.description}}}</textarea>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div data-id="code_hidden" class="span4 hidable">
                        <label>
                            Code
                            <i class="fa fa-question-circle" rel="tooltip"
                               title="The GGRC application will automatically provide codes for new objects.  If you would like to override this feature you may manually enter a code of your choosing.  You should have a specific reason for doing this."></i>
                            <a data-id="hide_code_lk" href="javascript://" class="field-hide" tabindex="-1">hide</a>
                        </label>
                        <input data-id="code_txtbx" tabindex="8" class="input-block-level" name="slug"
                               placeholder="WORKFLOW-XXX" type="text" value="{{instance.slug}}">
                    </div>
                </div>
            </div>

            <div class="span4">
                <div class="hidable">
                    <label>
                        Repeat Workflow
                        <a data-id="hide_description_lk" href="javascript://" class="field-hide" tabindex="-1">hide</a>
                    </label>
                    <repeat-on-button-wrapper {(instance)}="instance"></repeat-on-button-wrapper>
                </div>
            </div>
        </div>
    </form>
</div>
