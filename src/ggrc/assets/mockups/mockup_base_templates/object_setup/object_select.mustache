{{#if hidable}}
  <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
{{/if}}
<div {{#if sidebar}}class="side-content"{{/if}}>
  <select class="span{{size}}">
    {{#if t_type}}
      {{#each select.type}}
        <option value="{{option_text}}">{{option_text}}</option>
      {{/each}}
    {{else}}
      {{#each select.frequency}}
        <option value="{{option_text}}">{{option_text}}</option>
      {{/each}}
    {{/if}}
  </select>
</div>
