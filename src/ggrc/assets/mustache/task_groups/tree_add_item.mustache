<create-task-group-button
  {workflow}="parent_instance">
  {{#if allow_mapping_or_creating}}
  {{#if allow_creating}}
  {{#is_allowed 'update' workflow context='for'}}
  {{^if_equals workflow.status 'Inactive'}}
    <a href="javascript://"
      rel="tooltip"
      data-placement="left"
      data-original-title="Create Task Group"
      class="section-create action-button create-button"
      data-toggle="modal-ajax-form"
      data-modal-reset="reset"
      data-modal-class="modal-wide"
      data-object-singular="TaskGroup"
      data-object-plural="task_groups"
      data-form-target="nothing"
      data-refresh="false"
      data-object-params='{
        "workflow": { "id": {{workflow.id}} },
        "context": {{workflow.context.id}},
        "modal_title": "Create Task Group"
      }'>
      Create
    </a>
  {{/if_equals}}
  {{/is_allowed}}
  {{/if}}
  {{/if}}
</create-task-group-button>
