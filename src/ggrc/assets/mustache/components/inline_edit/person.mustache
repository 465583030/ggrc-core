{{#if context.isEdit}}
  {{#mandatory}}<span class="required">*</span>{{/mandatory}}
  {{#helptext}}<i class="fa fa-question-circle" rel="tooltip" title="{{helptext}}"></i>{{/helptext}}
  <autocomplete
    search-items-type="Person"
    can-item-selected="setPerson"
    placeholder="Select person"
  ></autocomplete>
{{else}}
  {{#if context.value}}
    <person person-obj="context.value"></person>
  {{else}}
    <span class="empty-message">No person</span>
  {{/if}}
{{/if}}
