<div class="datepicker__wrapper">
  {{#label}}
    <label>
      {{label}}
      {{#helptext}}
        <i class="fa fa-question-circle" rel="tooltip" title="{{helptext}}"></i>
      {{/helptext}}
    </label>
  {{/label}}
  <div class="datepicker__input-wrapper">
    <i class="fa fa-calendar"></i>
    <input
      placeholder="{{pattern}}"
      type="text"
      class="datepicker__input date"
      can-value="date"
      can-focus="onFocus"
    >
    <div class="datepicker__calendar {{#isHidden}}hidden{{/isHidden}}"></div>
  </div>
</div>
