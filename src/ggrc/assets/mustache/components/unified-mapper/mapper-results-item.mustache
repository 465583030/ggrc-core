<div class="flex-box list-object-item {{#isDisabled}}is-disabled{{/isDisabled}}">
  <div class="item-wrapper" can-click="toggleDetails">
    {{^isSnapshot}}
      <mapper-results-item-status
        item-data="itemData">
      </mapper-results-item-status>
    {{/isSnapshot}}
    <div class="icon-wrapper">
      <i class="fa fa-fw action {{toggleIconCls}}"></i>
    </div>
    <div class="icon-wrapper object-type">
      <i class="fa fa-fw {{objectTypeIcon}}"></i>
    </div>
    <mapper-results-item-attrs
      instance="displayItem"
      model-type="objectType"
      columns="selectedColumns">
    </mapper-results-item-attrs>
  </div>
  {{#searchOnly}}
    <view-object-buttons instance="displayItem"
                         view-is-hidden="true">
    </view-object-buttons>
  {{/searchOnly}}
  {{^searchOnly}}
    <object-selection-item
      is-disabled="isDisabled"
      is-selected="markedSelected"
      is-saving="isSaving"
      object-type="type"
      object-id="itemData.id">
    </object-selection-item>
  {{/searchOnly}}
</div>
{{#showDetails}}
  <mapper-results-item-details
    item="displayItem"
    class="flex-box flex-col flex-box-single">
  </mapper-results-item-details>
{{/showDetails}}
