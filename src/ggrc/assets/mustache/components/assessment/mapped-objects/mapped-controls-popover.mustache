{{#itemData}}
    <div class="assessment-mapped-objects__popover-content objectives-regulations">
        <div>
            <h6>Description</h6>
            <read-more text="itemData.description"></read-more>
        </div>
        <div class="assessment-mapped-objects__popover-attributes objectives-regulations">
            <div>
                <h6>Owner</h6>
                {{#if itemData.owners.length}}
                    <ul class="inner-count-list">
                      {{#each itemData.owners}}
                          <li>
                            <person-info person-id="{{id}}"></person-info>
                          </li>
                      {{/each}}
                    </ul>
                {{else}}
                  <span class="empty-message">None</span>
                {{/if}}
            </div>
            <div>
                <h6>Primary Contact</h6>
                {{#if itemData.contact}}
                    <person-info person-obj="itemData.contact"></person-info>
                {{else}}
                    <span class="empty-message">None</span>
                {{/if}}
            </div>
            <div>
                <h6>Secondary Contact</h6>
                {{#if itemData.secondary_contact}}
                    <person-info person-obj="itemData.secondary_contact"></person-info>
                {{else}}
                    <span class="empty-message">None</span>
                {{/if}}
            </div>
            <div>
                <h6>Code</h6>
                <span>{{itemData.slug}}</span>
            </div>
        </div>
    </div>
    <!-- Objectives and Regulations Grids -->
    <div class="assessment-mapped__objectives-regulations-grid {{#isLoading}}loading{{/isLoading}}">
        <div class="objectives-regulations-headers row-fluid">
            <h6 class="span6">
                <i class="fa fa-objective color"></i>
                Objectives ({{objectives.length}})
            </h6>
            <h6 class="span6">
                <i class="fa fa-regulation color"></i>
                Regulations ({{regulations.length}})
            </h6>
        </div>

        <div class="row-fluid">
            <div class="span6">
                <div class="row-fluid">
                    <div class="objectives-regulations-table-header span7">
                        Objective Description
                    </div>
                    <div class="objectives-regulations-table-header span5">
                        Notes
                    </div>
                </div>
            </div>
            <div class="span6">
              <div class="row-fluid">
                  <div class="objectives-regulations-table-header span7">
                      Regulation Description
                  </div>
                  <div class="objectives-regulations-table-header span5">
                      Notes
                  </div>
              </div>
            </div>
        </div>

        <div class="objectives-regulations-grid-body row-fluid">
            <div class="objectives-regulations-column span6">
                {{#each objectives}}
                <div class="objectives-regulations-body row">
                    <div class="objectives-regulations-description span7">
                        <h6 class="description-title">
                            {{title}}
                        </h6>
                        <read-more text="description"></read-more>
                    </div>
                    <div class="assessment-mapped-objects-objectives-regulations-notes span5">
                        {{notes}}
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="objectives-regulations-column span6">
                {{#each regulations}}
                <div class="objectives-regulations-body row">
                    <div class="objectives-regulations-description span7">
                        <h6 class="description-title">
                            {{title}}
                        </h6>
                        <read-more text="description"></read-more>
                    </div>
                    <div class="assessment-mapped-objects-objectives-regulations-notes span5">
                        {{notes}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
{{/itemData}}
