<div class="export-panel row-fluid wrap-row">
  <div class="span12">

    <div class="export-panel__group">
      <div class="export-panel__header">
        <div class="export-panel__title">
          Attributes
        </div>
        <div>
           <a data-action="select_toggle"
              data-type="attributes"
              data-value="true"
              href="javascript://">
                Select All
            </a>
            /
            <a data-action="select_toggle"
              data-value="false"
              data-type="attributes"
              href="javascript://">
                None
            </a>
        </div>
      </div>
      <div class="attribute-wrap">
        <ul class="attr-list">
          {{#each attributes}}
          <li>
            <label>
              <input can-value="isSelected" type="checkbox" name="{{key}}" checked>
              {{display_name}}
            </label>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="export-panel__group">
      <div class="export-panel__header">
        <div class="export-panel__title">
          Mappings
        </div>
        <div>
          <a data-action="select_toggle"
            data-type="mappings"
            data-value="true"
            href="javascript://">
              Select All
          </a>
          /
          <a data-action="select_toggle"
            data-value="false"
            data-type="mappings"
            href="javascript://">
              None
          </a>
        </div>
      </div>
      <div class="attribute-wrap">
        <ul class="attr-list">
          {{#each mappings}}
          <li>
            <label>
              <input can-value="isSelected" type="checkbox" name="{{key}}" checked>
              {{display_name}}
            </label>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>

    {{#is type 'Assessment'}}
      <div class="export-panel__group">
        <div class="export-panel__header">
          <div class="export-panel__title">
            Assessment Specific Custome Attributes
          </div>
          <div>
            <a data-action="select_toggle"
              data-type="local_attributes"
              data-value="true"
              href="javascript://">
                Select All
            </a>
            /
            <a data-action="select_toggle"
              data-value="false"
              data-type="local_attributes"
              href="javascript://">
                None
            </a>
          </div>
        </div>
        <div class="attribute-wrap">
          <ul class="attr-list">
            {{#each localAttributes}}
            <li>
              <label>
                <input can-value="isSelected" type="checkbox" name="{{key}}" checked>
                {{display_name}}
              </label>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    {{/is}}
  </div>
</div>
