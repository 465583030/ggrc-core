{{#instance}}

  {{#is_dashboard_or_all}}
    {{> /static/mustache/dashboard/info/info.mustache}}
  {{else}}
  <section class="info">
    {{#is_info_pin}}
    <div class="clearfix">
      <div class="tier-content pin">
        <div class="info-pane-utility">
          {{{render '/static/mustache/base_objects/info-pin.mustache'}}}
        </div>
        {{#name}}
        <div class="row-fluid wrap-row">
          <div class="span12">
            <h6>Name</h6>
            <h3>{{name}}
              {{#if_equals system_wide_role 'No Access'}}
                <span class="user-disabled">
                  (No Access)
                </span>
              {{/if}}
            </h3>
          </div>
        </div>
        {{/name}}

        {{#email}}
        <div class="row-fluid wrap-row">
          <div class="span12">
            <h6>Email</h6>
            <p>
            {{email}}
            </p>
          </div>
        </div>
        {{/email}}
      </div>
    </div>
    {{/is_info_pin}}

    <div class="tier-content">
      {{^is_info_pin}}
        {{#name}}
        <div class="row-fluid wrap-row">
          <div class="span12">
            <h6>Name</h6>
            <h3>{{name}}
              {{#if_equals system_wide_role 'No Access'}}
                <span class="user-disabled">
                  (No Access)
                </span>
              {{/if}}
            </h3>
          </div>
        </div>
        {{/name}}

        {{#email}}
        <div class="row-fluid wrap-row">
          <div class="span12">
            <h6>Email</h6>
            <p>
            {{email}}
            </p>
          </div>
        </div>
        {{/email}}
      {{/is_info_pin}}
      {{#company}}
      <div class="row-fluid wrap-row">
        <div class="span12">
          <h6>Company</h6>
            <p>
              {{company}}
            </p>
        </div>
      </div>
      {{/company}}
    </div><!-- tier-content end -->

  {{{render '/static/mustache/custom_attributes/info.mustache' instance=instance}}}

  </section>

    <div class="info-widget-footer">
      <p>
        <small>
        <em>
          Created at {{date created_at}}
            &nbsp;&nbsp;&nbsp;&nbsp;
          Modified by {{#using person=modified_by}}{{{render '/static/mustache/people/popover.mustache' person=person}}}{{/using}} on {{date updated_at}}
        </em>
        </small>
      </p>
    </div>
  {{/is_dashboard}}
{{/instance}}
