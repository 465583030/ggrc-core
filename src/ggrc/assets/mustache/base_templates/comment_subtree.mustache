{{#instance}}
<li>
  <span class="person-label assignee"></span>
  <div class="w-status">
    <span class="entry-author">
      {{#using person=modified_by}}{{{render '/static/mustache/people/popover.mustache' person=person}}}{{/using}}
      added a response - {{date created_at}}
    </span>
    <div class="rtf-block">
      {{{firstnonempty description '<em>No comment was entered</em>'}}}
    </div>
    {{#instance.class.info_pane_options.documents}}
    {{#add_to_current_scope parent_instance=instance}}
      <ul class="attachment-list" {{data 'options'}} data-disable-lazy-loading="true"
        {{ (el) -> el.cms_controllers_tree_view(el.data("options")).control("tree_view").display() }}>
      </ul>
    {{/add_to_current_scope}}
    {{/instance}}
  </div>
</li>
{{/instance}}
