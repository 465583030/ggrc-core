set -o nounset
set -o errexit

PROJECT="checkstyle"
SCRIPTPATH=$( cd "$(dirname "$0")" ; pwd -P )
cd "${SCRIPTPATH}/../.."
source bin/jenkins/functions.sh

PROJECT=$( project_name "$@" -d "$PROJECT" )

setup $PROJECT

echo "
###############################################################################
"

echo "Running pylint"
docker exec -i ${PROJECT}_dev_1 su vagrant -c "
  source /vagrant/bin/init_vagrant_env
  pylint -f parseable src/* test/* > test/pylint.out
" || true

echo "
###############################################################################
"

echo "Running eslint"
docker exec -i ${PROJECT}_dev_1 su vagrant -c "
  source /vagrant/bin/init_vagrant_env
  eslint -f checkstyle src -o test/eslint.xml
" || true

echo "
###############################################################################
"

teardown $PROJECT
