# Maintained By: miha@reciprocitylabs.com

set -o nounset
set -o errexit

PROJECT="codestyle"
SCRIPTPATH=$( cd "$(dirname "$0")" ; pwd -P )

cd "${SCRIPTPATH}/../.."

docker-compose --file docker-compose-testing.yml \
  --project-name ${PROJECT} \
  up --force-recreate -d

if [[ $UID -eq 1000 ]]; then
  docker exec -i ${PROJECT}_dev_1 sh -c "
  bindfs /vagrant_bind /vagrant --map=$UID/1000 -o nonempty
  "
fi

echo "Provisioning ${PROJECT}_dev_1"
docker exec -i ${PROJECT}_dev_1 su vagrant -c \
  "ansible-playbook -i provision/docker/inventory provision/site.yml > /dev/null"

echo "
###############################################################################
"

echo "Running pylint"
docker exec -i ${PROJECT}_dev_1 su vagrant -c "
  source /vagrant/bin/init_vagrant_env
  /vagrant/bin/check_pylint_diff
" && pylint_rc=$? || pylint_rc=$?

[[ pylint_rc -eq 0 ]] && echo "PASS" ||  echo "FAIL"

echo "
###############################################################################
"

echo "Running flake8"
docker exec -i ${PROJECT}_dev_1 su vagrant -c "
  source /vagrant/bin/init_vagrant_env
  /vagrant/bin/check_flake8_diff
" && flake_rc=$? || flake_rc=$?

[[ flake_rc -eq 0 ]] && echo "PASS" ||  echo "FAIL"

echo "
###############################################################################
"

echo "Running eslint"
docker exec -i ${PROJECT}_dev_1 su vagrant -c "
  /vagrant/bin/check_eslint_diff
" && eslint_rc=$? || eslint_rc=$?

[[ eslint_rc -eq 0 ]] && echo "PASS" ||  echo "FAIL"

echo "
###############################################################################
"

docker exec -i ${PROJECT}_dev_1 sh -c "chown $UID -R /vagrant"
docker exec -i ${PROJECT}_selenium_1 sh -c "chown $UID -R /selenium"

docker-compose -p ${PROJECT} stop

exit $((pylint_rc + flake_rc + eslint_rc))
